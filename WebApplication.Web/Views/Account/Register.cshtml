@model WebApplication.Web.Models.Account.RegisterViewModel
@{
	ViewData["Title"] = "Sign Up";
}


<section class="maincontent">

	<h2>Sign Up</h2>
	<p><a asp-controller="account" asp-action="login">Already have an account? Sign in!</a></p>
	
	<form class="form" asp-controller="Account" asp-action="Register" method="post">
			<div class="form-group">
				<label asp-for="Email">Email:</label>
				<input asp-for="Email" type="email" class="form-control" id="email" placeholder="Enter email" name="email" />
				<span asp-validation-for="Email"></span>
			</div>

		<div class="form-group">
			<label asp-for="Password">Password:</label>
			<input asp-for="Password" type="password" class="form-control" id="pwd" placeholder="Enter password" name="password" />
			<span asp-validation-for="Password"></span>
		</div>

		<div class="form-group">
			<label asp-for="ConfirmPassword">Confirm Password:</label>
			<input asp-for="ConfirmPassword" type="password" class="form-control" id="pwd" placeholder="Enter password" name="confirmpassword" />
			<span asp-validation-for="ConfirmPassword"></span>
		</div>

		<div class="submit-button">
			<button type="submit" class="btn btn-default">Submit</button>
		</div>
	</form>
</section>
